#include <iostream>

using namespace std;

int main()
{
	// Um einer Variablen zu sagen dass sie nur positive Werte ausgeben soll geht man Folgendermaßen vor:

	unsigned int zahl = 25; //unsigned heißt ohne vorzeichen.
	signed int zahl2 = -10; //signed heißt mit Vorzeichen.

	cout << zahl << endl
		<< zahl2 << endl;
	/* Standartmäsig ist die Variable mit Vorzeichen. Wenn wir 256 Bit ausgeben können heißt das von -127 bis + 128 ( plus 0).
	   Wenn wir die selbe Variable ohne Vorzeichen definieren dann wäre es von 0 bis 256.*/

	return 0;
}
